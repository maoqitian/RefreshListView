<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/iv_arrow"
            android:src="@mipmap/common_listview_headview_red_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ProgressBar
            android:id="@+id/pb"
            android:visibility="invisible"
            android:indeterminateDrawable="@drawable/refresh_progressbar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:text="下拉刷新"
            android:textColor="#edc80b"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_desc_refresh_time"
            android:text="最后更新时间： 2016年12月16日21:35:18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>